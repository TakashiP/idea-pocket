<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
    <section class="pocket_form col-md-4">
      <%= render 'shared/pocket_form' %>
      <% if @user.pockets.any? %>
      <h3>アイデアポケット (<%= @user.pockets.count %>)</h3>
      <ol class="pockets">
        <%= render @pockets %>
      </ol>
    <% end %>
    </section>
    <section class="idea_form col-md-8">
      <%= render 'shared/idea_form' %>
      <% if @user.pockets.any? %>
      <h3>アイデア (<%= @user.ideas.count %>)</h3>
      <ol class="pockets">
        <%= render @ideas %>
      </ol>
    <% end %>
   
    </section>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>アイデアポケットへようこそ！</h1>

    <%= link_to "新規会員登録する！", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>