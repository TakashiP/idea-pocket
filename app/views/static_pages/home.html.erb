<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="pocket_form">
        <%= render 'shared/pocket_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>アイデアポケットへようこそ！</h1>

    <%= link_to "新規会員登録する！", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>